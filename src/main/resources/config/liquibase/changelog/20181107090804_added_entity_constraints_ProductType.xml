<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity ProductType.
    -->
    <changeSet id="20181107090804-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="category_id"
                                 baseTableName="product_type"
                                 constraintName="fk_product_type_category_id"
                                 referencedColumnNames="id"
                                 referencedTableName="category"/>

        <addForeignKeyConstraint baseColumnNames="product_types_id"
                                 baseTableName="product_type_image"
                                 constraintName="fk_product_type_image_product_types_id"
                                 referencedColumnNames="id"
                                 referencedTableName="product_type"/>
        <addForeignKeyConstraint baseColumnNames="images_id"
                                 baseTableName="product_type_image"
                                 constraintName="fk_product_type_image_images_id"
                                 referencedColumnNames="id"
                                 referencedTableName="image"/>
        
    </changeSet>
</databaseChangeLog>
